<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
	 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

    <properties>
      <ujmp.version>0.0.2</ujmp.version>
    </properties>

	<groupId>org.ujmp</groupId>
	<artifactId>ujmp</artifactId>
	<version>${ujmp.version}</version>
	<packaging>pom</packaging>
    <url>http://www.ujmp.org</url>

	<build>
    <resources>
      <resource>
        <targetPath>META-INF</targetPath>
        <filtering>false</filtering>
        <directory>${basedir}/src/main/resource/META-INF</directory>
        <includes>
          <include>**</include>
        </includes>
      </resource>
    </resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencyManagement>
		<dependencies>

			<dependency>
				<groupId>org.ujmp</groupId>
				<artifactId>ujmp-core</artifactId>
				<version>${ujmp.version}</version>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>org.ujmp</groupId>
				<artifactId>ujmp-jackcess</artifactId>
				<version>${ujmp.version}</version>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>org.ujmp</groupId>
				<artifactId>ujmp-colt</artifactId>
				<version>${ujmp.version}</version>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>org.ujmp</groupId>
				<artifactId>ujmp-jama</artifactId>
				<version>${ujmp.version}</version>
				<scope>compile</scope>
			</dependency>
			<dependency>
      			<groupId>org.ujmp</groupId>
		        <artifactId>ujmp-jmatrices</artifactId>
		        <version>${ujmp.version}</version>
				<scope>compile</scope>
		    </dependency>

			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>4.4</version>
				<scope>test</scope>
			</dependency>
			<dependency>
				<groupId>commons-math</groupId>
				<artifactId>commons-math</artifactId>
				<version>1.2</version>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>commons-logging</groupId>
				<artifactId>commons-logging</artifactId>
				<version>1.1.1</version>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>commons-lang</groupId>
				<artifactId>commons-lang</artifactId>
				<version>2.3</version>
				<scope>compile</scope>
			</dependency>			
			<dependency>
				<groupId>jackcess</groupId>
				<artifactId>jackcess</artifactId>
				<version>1.1.15</version>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>colt</groupId>
				<artifactId>colt</artifactId>
				<version>1.2.0</version>
				<scope>compile</scope>
			</dependency>
			<dependency>
				<groupId>jama</groupId>
				<artifactId>jama</artifactId>
				<version>1.0.2</version>
				<scope>compile</scope>
			</dependency>
			<dependency>
      			<groupId>jmatrices</groupId>
		        <artifactId>jmatrices</artifactId>
		        <version>0.6</version>
				<scope>compile</scope>
		    </dependency>
			
			

		</dependencies>
	</dependencyManagement>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
        		<inherited>true</inherited>
		        <configuration>
		        <outputDirectory>../ujmp/target/${project.version}/docs/${project.name}</outputDirectory>
		        <reportOutputDirectory>../ujmp/target/${project.version}/docs/${project.name}</reportOutputDirectory>
		        <linksource>true</linksource>
		        <links>
		          <link>http://java.sun.com/javase/6/docs/api/</link>
		          <link>http://www.ujmp.org/ujmp/${project.version}/docs/ujmp-core/apidocs</link>
		        </links>
		        </configuration>
			</plugin>
		</plugins>
	</reporting>

	<distributionManagement>
		<repository>
			<id>ujmp-repository</id>
			<name>UJMP Repository</name>
			<url>file:/~/.m2/repository</url>
		</repository>
	</distributionManagement>


</project>