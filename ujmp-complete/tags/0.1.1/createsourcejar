DIR="/home/arndt/workspace/ujmp-all"
VERSION="0.1.1"
PACKAGES="ujmp-core ujmp-gui ujmp-colt ujmp-jackcess ujmp-jama ujmp-jdbc ujmp-jexcelapi ujmp-jmatio ujmp-jmathplot ujmp-jmatrices ujmp-mtj ujmp-vecmath"

cd $DIR
rm -rf target
mkdir -p target

for p in $PACKAGES
do
  cp ../$p/target/$p-$VERSION-sources.jar target/$p-$VERSION-sources.zip
done

cd target

for p in $PACKAGES
do
  unzip -o $p-$VERSION-sources.zip
done

rm -rf *.zip

zip -r ujmp-all-$VERSION-sources.jar *
