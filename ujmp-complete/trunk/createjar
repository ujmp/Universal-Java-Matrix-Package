DIR="/home/arndt/workspace/ujmp-complete"
VERSION="0.2.3"
PACKAGES="ujmp-core ujmp-gui ujmp-bpca ujmp-colt ujmp-commonsmath ujmp-hadoop ujmp-itext ujmp-jackcess ujmp-jama ujmp-jdbc ujmp-jexcelapi ujmp-jmathplot ujmp-jmatio ujmp-jmatrices ujmp-jsci ujmp-jscience ujmp-jung ujmp-lsimpute ujmp-lucene ujmp-mail ujmp-mantissa ujmp-mtj ujmp-ojalgo ujmp-parallelcolt ujmp-pdfbox ujmp-sst ujmp-vecmath"

cd $DIR
rm -rf target
mkdir -p target

for p in $PACKAGES
do
  cp ../$p/target/$p-$VERSION.jar target/$p-$VERSION.zip
done

cd target

for p in $PACKAGES
do
  unzip -o $p-$VERSION.zip
done

rm -rf *.zip

echo "Main-Class: org.ujmp.gui.UJMP" > META-INF/MF.MF
cat META-INF/MANIFEST.MF >> META-INF/MF.MF
rm -f META-INF/MANIFEST.MF
mv META-INF/MF.MF META-INF/MANIFEST.MF

zip -r ujmp-complete-$VERSION.jar *
